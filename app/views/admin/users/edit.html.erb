<div id="container">
	<div class="shell">		
		<!-- Small Nav -->
		<div class="small-nav">
			<a href="#">유저(Users)</a>
			<span>&gt;</span>
      <%= @user.username %>
			<span>&gt;</span>
      수정
		</div>
		<!-- End Small Nav -->
		<!-- Main -->
		<div id="main">
			<div class="cl">&nbsp;</div>
			
			<!-- Content -->
			<div id="content">
				<!-- Box -->
				<div class="box">
					<!-- Box Head -->
					<div class="box-head">
						<h2>수정</h2>
					</div>
					<!-- End Box Head -->
					

						
						<!-- Form -->
            <%= form_for(@user, :url => admin_user_path(@user)) do |f| %>
						  <div class="form">
						  	<p>
									<label>Username</label>
                  <%= f.text_field :username %>
								</p>
								<p>
									<label>Name</label>
                  <%= f.text_field :name %>
								</p>	
								<p>
									<label>Email</label>
                  <%= f.text_field :email %>
								</p>	
								<p>
									<label>Authorized</label>
                  <%= f.text_field :authorized %>
								</p>	
						</div>
						<!-- End Form -->
						
						<!-- Form Buttons -->
						<div class="buttons">
              <%= link_to '돌아가기', admin_user_path(@user), :class => 'button' %>
						  <%= f.submit '저장', :class => 'button' %>
						</div>
						<!-- End Form Buttons -->

  			  <% end %>
				</div>
				<!-- End Box -->

			</div>
			<!-- End Content -->
			<div class="cl">&nbsp;</div>			
		</div>
		<!-- Main -->
	</div>
</div>
<!-- End Container -->

