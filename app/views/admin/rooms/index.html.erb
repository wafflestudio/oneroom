<div id="container">
	<div class="shell">		
		<!-- Small Nav -->
		<div class="small-nav">
			<a href="#">방(Rooms)</a>
			<span>&gt;</span>
      목록
		</div>
		<!-- End Small Nav -->
		<!-- Main -->
		<div id="main">
			<div class="cl">&nbsp;</div>
			
			<!-- Content -->
			<div id="content">
				
				<!-- Box -->
				<div class="box">
					<!-- Box Head -->
					<div class="box-head">
						<h2 class="left">방 목록</h2>
					</div>
					<!-- End Box Head -->	

					<!-- Table -->
					<div class="table">
						<table width="100%" border="0" cellspacing="0" cellpadding="0">
							<tr>
								<th>Name</th>
								<th>Type</th>
								<th>Region</th>
								<th>Date</th>
								<th width="110" class="ac">Content Control</th>
							</tr>
							<% @rooms.each do |r| %>
							<tr>
								<td>
								  <h3><%= link_to r.name, admin_room_path(r) %></h3>
								</td>
								<td><%= r.type_name %></td>
								<td><%= r.region_name %></td>
								<td><%= r.created_at %></td>
								<td>
							  	<%= link_to "수정", edit_admin_room_path(r), :class => "ico edit" %>
							  	<%= link_to "삭제", admin_room_path(r), :method => :delete, :confirm => "정말로 삭제하시겠습니까?", :class => "ico del" %>
							  </td>
							</tr>
							<% end %>
						</table>
						
						
						<!-- Pagging -->
						<div class="pagging">
						</div>
						<!-- End Pagging -->
						
					</div>
					<!-- Table -->
					
				</div>
				<!-- End Box -->
			</div>
			<!-- End Content -->
		<div class="cl">&nbsp;</div>			
		</div>
		<!-- Main -->
	</div>
</div>
<!-- End Container -->

