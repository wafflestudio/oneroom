<div class="row span3 infobubble">
  <h4>
    <span class="label label-inverse"><%= @room.type_name %></span>
    <%= link_to @room.name, "#rooms/#{@room.id}" %>
  </h4>

  <table class="room_info_row">
    <tr>
      <td class="room_info_thumb" rowspan=2><%= link_to image_tag(img(@room).image.thumb, :width => 50), "#rooms/#{@room.id}" %></td>
      <td>
        <div class="need_login">
          <strong>로그인</strong>이 필요한 정보입니다.
        </div>
      </td>
    </tr>
  </table>
</div>


